{
  "name": "node-typescript-env-example",
  "version": "1.0.0",
  "description": "TypeScript Node Base.",
  "main": "index.js",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "webpack": "webpack --mode development",
    "build": "yarn clean && yarn webpack",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "yarn-run-all eslint check-types",
    "lint:fix": "yarn-run-all eslint:fix check-types format",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "14",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "aws-sdk-client-mock": "^0.5.5",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.0.3",
    "lint-staged": "^11.0.0",
    "mrm": "^3.0.2",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "webpack": "^5.60.0",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "tsc --noEmit",
    "*.{js,ts,json}": "prettier --write"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.38.0",
    "@aws-sdk/signature-v4-crt": "^3.38.0",
    "aws-crt": "^1.10.2"
  }
}
