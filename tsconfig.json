{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false, // 様子見。
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext", // commonjsじゃなくてOKか様子見。
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": false,
    "baseUrl": "src"
  },
  "include": ["src"],
}
